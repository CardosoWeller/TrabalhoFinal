<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/pointsTxt"
            android:layout_width="248dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewLevel"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Points:" />

        <TextView
            android:id="@+id/nbQuestionTxt"
            android:layout_width="246dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/pointsTxt"
            app:layout_constraintTop_toBottomOf="@+id/pointsTxt"
            tools:text="Number Question:" />

        <TextView
            android:id="@+id/nivelTxt"
            android:layout_width="248dp"
            android:layout_height="37dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewLevel"
            app:layout_constraintStart_toStartOf="@+id/pointsTxt"
            app:layout_constraintTop_toBottomOf="@+id/nbQuestionTxt"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>